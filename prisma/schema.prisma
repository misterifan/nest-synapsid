generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserStatus {
  active
  inactive
  waiting_activation
}

model User {
  id                 Int        @id @default(autoincrement())
  email              String     @unique
  email_validated_at DateTime?
  name               String
  password           String
  status             UserStatus @default(waiting_activation)
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt

  // Relations
  authProviders AuthProvider[]
  tokens        Token[]
}

model AuthProvider {
  id                Int      @id @default(autoincrement())
  providerName      String
  providerId        String?  @unique
  emailFromProvider String
  userID            Int
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  user User @relation(fields: [userID], references: [id], onDelete: Cascade)
}

model Token {
  token       String   @id
  userID      Int
  type        String
  expires     DateTime
  blacklisted Boolean  @default(false)

  // Relations
  user User @relation(fields: [userID], references: [id], onDelete: Cascade)
}
